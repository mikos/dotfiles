weechat(){
	del_stopped weechat

	docker run -it \
		-v /etc/localtime:/etc/localtime:ro \
		-v "${HOME}/.weechat:/weechat/.weechat" \
		-e UID=1000 \
		-e GID=1000 \
		--name weechat \
		jkaberg/weechat
}
