#!/bin/bash

export DOCKER_REPO_PREFIX=jess

#
# Helper functions
#
del_stopped(){
	local name=$1
	local state
	state=$(docker inspect --format "{{.State.Running}}" "$name" 2>/dev/null)

	if [[ "$state" == "false" ]]; then
		docker rm "$name"
	fi
}
